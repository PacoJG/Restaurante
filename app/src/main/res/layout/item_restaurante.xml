<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_descriptive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="@color/dark_grey"
    card_view:cardCornerRadius="8dp"
    card_view:contentPadding="4dp"
    card_view:strokeColor="@color/border_orange"
    card_view:strokeWidth="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10.5dp"
        android:paddingTop="12dp"
        android:paddingEnd="10.5dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/item_image_carddescriptive"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:scaleType="fitXY"
            tools:srcCompat="@drawable/restaurante" />

        <TextView
            android:id="@+id/tvTitleRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/item_image_carddescriptive"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="Titulo de restaurante"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitleRestaurant"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/item_image_carddescriptive">

            <ImageView
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@drawable/ic_star" />

            <Space
                android:layout_width="1dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvCalification"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:paddingTop="3dp"
                android:text="5.0"
                android:textColor="@color/border_orange" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/item_image_carddescriptive">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AÃ±o de apertura:"
                android:textColor="@color/white" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvanio_apertura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2010"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout2"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/item_image_carddescriptive">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costo promedio:"
                android:textColor="@color/white" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvCosto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1000"
                android:textColor="@color/white" />

        </LinearLayout>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>